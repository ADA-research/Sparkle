[flake8]

max-line-length = 89
max-doc-length = 89
indent-size = 4
statistics = True

# Cyclomatic complexity desactivated
# max-complexity = 15 

# For now, exlude sparkle_help and test
exclude =
    Commands/sparkle_help,
    Commands/test,
    Components,
    Examples,
    Extractors,
    Feature_Data,
    .git,
    .gitignore,
    Instances,
    Log,
    Output,
    Performance_Data,
    __pycache__,
    .pytest_cache,
    Records,
    Reference_Lists,
    scratch,
    Solvers,
    Sparkle_Portfolio_Selector,
    Tmp,
    build,
    dist
